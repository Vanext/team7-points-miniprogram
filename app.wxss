/* app.wxss - Team 7 全局样式 */

/* 全局变量定义 */
page {
  --primary-color: #1a237e;
  --primary-light: #3949ab;
  --background-color: #f5f5f5;
  --card-background: #ffffff;
  --text-primary: #212121;
  --text-secondary: #757575;
  --border-color: #e0e0e0;
  --shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  --border-radius: 8px;
}

/* 基础样式重置 */
view, text, image, input, textarea, button {
  box-sizing: border-box;
}

page {
  background-color: var(--background-color);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.page-container {
  padding: 0 20rpx 40rpx;
  background-color: var(--background-color);
}

/* 卡片样式 */
.card {
  background-color: var(--card-background);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-header {
  padding: 30rpx;
  border-bottom: 2rpx solid var(--border-color);
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.card-body {
  padding: 30rpx;
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: var(--border-radius);
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  min-height: 80rpx;
  position: relative;
  overflow: hidden;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: var(--primary-color);
  color: white;
}

.btn-primary:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

.btn-block {
  width: 100%;
  display: block;
}

.btn-large {
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  min-height: 100rpx;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  min-height: 60rpx;
}

/* 文本样式 */
.text-primary { 
  color: var(--primary-color); 
}

.text-secondary { 
  color: var(--text-secondary); 
}

.text-center { 
  text-align: center; 
}

.text-right { 
  text-align: right; 
}

.text-left { 
  text-align: left; 
}

/* 布局工具类 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.items-center {
  align-items: center;
}

.items-start {
  align-items: flex-start;
}

.items-end {
  align-items: flex-end;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-around {
  justify-content: space-around;
}

.justify-start {
  justify-content: flex-start;
}

.justify-end {
  justify-content: flex-end;
}

.flex-1 {
  flex: 1;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 间距工具类 */
.m-0 { margin: 0; }
.m-1 { margin: 10rpx; }
.m-2 { margin: 20rpx; }
.m-3 { margin: 30rpx; }
.m-4 { margin: 40rpx; }

.mt-0 { margin-top: 0; }
.mt-1 { margin-top: 10rpx; }
.mt-2 { margin-top: 20rpx; }
.mt-3 { margin-top: 30rpx; }
.mt-4 { margin-top: 40rpx; }

.mb-0 { margin-bottom: 0; }
.mb-1 { margin-bottom: 10rpx; }
.mb-2 { margin-bottom: 20rpx; }
.mb-3 { margin-bottom: 30rpx; }
.mb-4 { margin-bottom: 40rpx; }

.p-0 { padding: 0; }
.p-1 { padding: 10rpx; }
.p-2 { padding: 20rpx; }
.p-3 { padding: 30rpx; }
.p-4 { padding: 40rpx; }

/* 状态徽章 */
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 20rpx;
  color: white;
  text-align: center;
  min-width: 40rpx;
}

.badge-success { 
  background-color: #4caf50; 
}

.badge-warning { 
  background-color: #ff9800; 
}

.badge-error { 
  background-color: #f44336; 
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: var(--text-secondary);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: var(--text-secondary);
}

.empty-state-icon {
  font-size: 120rpx;
  color: #bdbdbd;
  margin-bottom: 20rpx;
}

.empty-state-text {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--border-radius);
  font-size: 28rpx;
  background-color: var(--card-background);
  color: var(--text-primary);
}

.form-input:focus,
.form-textarea:focus {
  border-color: var(--primary-color);
  outline: none;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-top {
  padding-top: env(safe-area-inset-top);
}