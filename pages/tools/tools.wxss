/* pages/tools/tools.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 分页选择器样式 */
.tab-container {
  display: flex;
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #666666;
  background: #ffffff;
  transition: all 0.3s ease;
  border-right: 1rpx solid #f0f0f0;
}

.tab-item:last-child {
  border-right: none;
}

.tab-item.active {
  color: #667eea;
  background: linear-gradient(135deg, #f8f9ff 0%, #e8ecff 100%);
  font-weight: bold;
}

/* 分页内容样式 */
.tab-content {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 空白分页样式 */
.empty-tab {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 100rpx 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #999999;
}

/* 页面头部 */
.page-header {
  text-align: center;
  padding: 40rpx 20rpx;
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 通用区域样式 */
.input-section,
.action-section,
.result-section,
.tips-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 输入组件样式 */
.input-group {
  margin-bottom: 25rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: flex;
  align-items: baseline;
  margin-bottom: 15rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.label-unit {
  font-size: 24rpx;
  color: #666666;
  margin-left: 8rpx;
}

.weight-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.weight-input:focus {
  border-color: #667eea;
  background: #ffffff;
}

.picker-input {
  width: 100%;
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999999;
}

.input-description {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
  padding-left: 10rpx;
}

/* 操作按钮样式 */
.action-section {
  text-align: center;
}

.calculate-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.calculate-btn.calculating {
  background: #cccccc;
  box-shadow: none;
}

.calculate-btn::after {
  border: none;
}

.reset-btn {
  width: 60%;
  height: 70rpx;
  background: #ffffff;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 35rpx;
  font-size: 28rpx;
}

.reset-btn::after {
  border: none;
}

/* 计算结果样式 */
.pressure-results {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.pressure-item {
  text-align: center;
  flex: 1;
}

.pressure-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.pressure-value {
  font-size: 64rpx;
  font-weight: bold;
  color: #667eea;
  line-height: 1;
  margin-bottom: 5rpx;
}

.pressure-unit {
  font-size: 24rpx;
  color: #999999;
}

.pressure-divider {
  width: 2rpx;
  height: 80rpx;
  background: #e9ecef;
  margin: 0 20rpx;
}

/* 建议说明样式 */
.advice-section {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  border-radius: 16rpx;
  padding: 25rpx;
  margin-top: 30rpx;
}

.advice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3436;
  margin-bottom: 15rpx;
}

.advice-content {
  font-size: 26rpx;
  color: #2d3436;
  line-height: 1.6;
}

/* 使用说明样式 */
.tips-content {
  padding: 0;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #555555;
  line-height: 1.5;
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .page-header {
    padding: 30rpx 15rpx;
  }
  
  .header-title {
    font-size: 42rpx;
  }
  
  .pressure-value {
    font-size: 56rpx;
  }
}