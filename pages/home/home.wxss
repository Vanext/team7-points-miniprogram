/* pages/home/home.wxss */
page {
  background: #f5f6fb;
}

.container {
  padding: 20rpx; /* Reduced padding */
}

/* Brand Header */
.brand-header {
  background: linear-gradient(180deg, #1a237e, #2c3aa8);
  padding: 30rpx 24rpx; /* Reduced padding */
  border-radius: 20rpx;
  margin-bottom: 20rpx; /* Reduced margin */
  color: white;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(26, 35, 126, 0.3);
}

.brand-info .slogan {
  font-size: 36rpx; /* Larger slogan since title is gone */
  font-weight: bold;
  font-style: italic;
  display: block;
  margin-bottom: 8rpx;
  letter-spacing: 2rpx;
}

.brand-info .sub-slogan {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 6rpx;
}

.brand-info .motto {
  font-size: 22rpx;
  opacity: 0.8;
  display: block;
}

/* User Info Card */
.user-info-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx; /* Reduced padding */
  margin-bottom: 20rpx; /* Reduced margin */
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.user-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.status-badge {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.status-badge.activated {
  background: #e8f5e9;
  color: #4caf50;
}

.status-badge.inactive {
  background: #fff3e0;
  color: #ff9800;
}

.points-display {
  width: 140rpx; /* Slightly smaller */
  height: 140rpx;
  background: #1a237e; /* Unified with main color */
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(26, 35, 126, 0.2);
}

.points-number {
  font-size: 44rpx;
  font-weight: bold;
  color: white; /* Ensure white */
  line-height: 1.2;
}

.points-label {
  font-size: 22rpx;
  opacity: 0.9;
  color: white;
}

/* Action Grid */
.action-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3 columns for compactness */
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-item {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.action-icon {
  font-size: 56rpx; /* Slightly smaller */
  margin-bottom: 12rpx;
}

.action-icon-img {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* Announcements */
.announcements-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.announcement-header { margin-bottom: 16rpx; }
.ann-label { font-size: 32rpx; font-weight: bold; color: #333; }
.announcements-swiper { height: 220rpx; }
.announcements-swiper.expanded { height: auto; }

.announcement-item { display: flex; flex-direction: column; height: 220rpx; }
.announcement-item.expanded { height: auto; }

.ann-row-top { display: flex; align-items: center; margin-bottom: 8rpx; }

.tag { background: #ff9800; color: white; font-size: 20rpx; padding: 4rpx 10rpx; border-radius: 6rpx; margin-right: 12rpx; }

.ann-title { font-size: 28rpx; font-weight: 500; color: #333; }
.ann-time { font-size: 22rpx; color: #999; margin-bottom: 8rpx; }
.ann-content-scroll { height: 140rpx; overflow: hidden; }
.ann-content { font-size: 26rpx; color: #666; line-height: 1.6; white-space: pre-wrap; }

/* Camp Section Banner */
.camp-section {
  margin-bottom: 20rpx;
}

.camp-card {
  background: linear-gradient(90deg, #d32f2f, #e53935);
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.camp-row {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.camp-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.camp-title {
  font-size: 30rpx;
  font-weight: bold;
}

.camp-subtitle {
  font-size: 22rpx;
  opacity: 0.9;
}

/* Partners Section */
.partners-section {
  margin-top: 10rpx;
}

.partners-header { margin-bottom: 12rpx; padding: 0 6rpx; }
.partners-title { font-size: 28rpx; font-weight: 600; color: #333; }

.partners-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3 columns, 2 rows */
  gap: 16rpx;
}

.partner-item {
  background: rgba(255,255,255,0.6); /* Semi-transparent white */
  border-radius: 12rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed #ccc;
  overflow: hidden;
}

.partner-img {
  width: 100%;
  height: 100%;
}

.partner-placeholder {
  font-size: 40rpx;
  color: #ccc;
  font-weight: 300;
}
.ann-actions { margin-top: 8rpx; display: flex; justify-content: flex-end; }
.ann-action-btn { color: #1a237e; font-size: 24rpx; }
.ann-content-expanded { max-height: none; }
.ann-content-scroll { max-height: 140rpx; }
.ann-content { font-size: 26rpx; color: #666; line-height: 1.6; white-space: pre-wrap; }
