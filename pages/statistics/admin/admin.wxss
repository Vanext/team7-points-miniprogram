/* 管理员统计页面样式 */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 概览区域 */
.overview-section {
  background: linear-gradient(135deg, #1a237e 0%, #3949ab 100%);
  color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
}

.active-rate {
  font-size: 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.overview-item {
  background-color: rgba(255, 255, 255, 0.1);
  padding: 30rpx 24rpx;
  border-radius: 16rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* WXSS 不支持 backdrop-filter，使用 box-shadow 替代 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.overview-item.wide {
  grid-column: span 2;
}

.overview-number {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.overview-icon {
  font-size: 32rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  opacity: 0.7;
}

/* 时间范围选择器 */
.time-range-selector {
  display: flex;
  background-color: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.range-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.range-item.active {
  background-color: #1a237e;
  color: #fff;
}

.range-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 图表区域 */
.chart-section {
  background-color: #fff;
  margin: 0 30rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
}

.chart-container {
  height: 400rpx;
  width: 100%;
  position: relative;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

/* 统计列表 */
.stats-list {
  margin-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.stats-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.stats-item:last-child {
  border-bottom: none;
}

.stats-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.stats-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.stats-details {
  display: flex;
  flex-direction: column;
}

.stats-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.stats-count {
  font-size: 24rpx;
  color: #999;
}

.stats-points {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a237e;
}

/* 排行榜区域 */
.ranking-section {
  background-color: #fff;
  margin: 0 30rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.ranking-list {
  margin-top: 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.ranking-item:last-child {
  border-bottom: none;
}

.ranking-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.ranking-item:nth-child(1) .ranking-number {
  background-color: #ffd700;
  color: #fff;
}

.ranking-item:nth-child(2) .ranking-number {
  background-color: #c0c0c0;
  color: #fff;
}

.ranking-item:nth-child(3) .ranking-number {
  background-color: #cd7f32;
  color: #fff;
}

.rank {
  font-size: 24rpx;
  font-weight: 600;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-nickname {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.user-records {
  font-size: 24rpx;
  color: #999;
}

.user-points {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a237e;
}

/* 成员区域 */
.member-section {
  background-color: #fff;
  margin: 0 30rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.member-list {
  margin-top: 20rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.member-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.member-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.member-nickname {
  font-size: 28rpx;
  color: #333;
  margin-right: 12rpx;
}

.admin-badge {
  background-color: #1a237e;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
}

.member-activity {
  font-size: 24rpx;
  color: #999;
}

.member-total {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a237e;
}

.show-more {
  text-align: center;
  padding: 30rpx 0 10rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 20rpx;
}

.show-more-text {
  font-size: 28rpx;
  color: #1a237e;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background-color: #fff;
  margin: 0 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .overview-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .overview-item.wide {
    grid-column: span 1;
  }
  
  .chart-container {
    height: 300rpx;
  }
  
  .overview-section {
    padding: 30rpx 20rpx;
  }
  
  .chart-section,
  .ranking-section,
  .member-section {
    margin: 0 20rpx 20rpx;
    padding: 24rpx;
  }
}