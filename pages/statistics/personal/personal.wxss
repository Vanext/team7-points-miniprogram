/* 个人统计页面样式 */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #007aff 0%, #5856d6 100%);
  color: #fff;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.admin-badge {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

.points-display {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.points-number {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1;
}

.points-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 4rpx;
}

/* 时间范围选择器 */
.time-range-selector {
  display: flex;
  background-color: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.range-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.range-item.active {
  background-color: #007aff;
  color: #fff;
}

.range-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 统计概览 */
.stats-overview {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin: 0 30rpx 30rpx;
}

.stat-item {
  background-color: #fff;
  padding: 30rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stat-icon {
  font-size: 32rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  opacity: 0.6;
}

/* 图表区域 */
.chart-section {
  background-color: #fff;
  margin: 0 30rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
}

.chart-container {
  height: 400rpx;
  width: 100%;
  position: relative;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

/* 活动类型列表 */
.activity-list {
  margin-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.activity-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-info {
  display: flex;
  align-items: center;
}

.activity-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.activity-name {
  font-size: 28rpx;
  color: #333;
}

.activity-points {
  font-size: 28rpx;
  font-weight: 600;
  color: #007aff;
}

/* 兑换统计 */
.exchange-section {
  background-color: #fff;
  margin: 0 30rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.exchange-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.exchange-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background-color: #f8f9ff;
  border-radius: 12rpx;
  border: 2rpx solid #e8f0ff;
}

.exchange-stat-item .stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #007aff;
  margin-bottom: 8rpx;
}

.exchange-stat-item .stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background-color: #fff;
  margin: 0 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .stats-overview {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .exchange-stats {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .chart-container {
    height: 300rpx;
  }
  
  .user-card {
    padding: 30rpx 20rpx;
  }
  
  .chart-section,
  .exchange-section {
    margin: 0 20rpx 20rpx;
    padding: 24rpx;
  }
}