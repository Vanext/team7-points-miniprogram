/* pages/edit-profile/edit-profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 24rpx;
  padding-bottom: 140rpx; /* Space for footer */
  box-sizing: border-box;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  padding: 24rpx 0 12rpx;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 8rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
}

.content {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #eee;
}

.arrow {
  font-size: 24rpx;
  color: #ccc;
}

.input {
  text-align: right;
  font-size: 28rpx;
  color: #333;
  width: 400rpx;
}

.value {
  font-size: 28rpx;
  color: #666;
}

.value.highlight {
  color: #1677ff;
  font-weight: bold;
  font-size: 32rpx;
}

.badge-admin {
  background: #e6f7ff;
  color: #1677ff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tips {
  font-size: 24rpx;
  color: #999;
  padding: 0 16rpx;
  line-height: 1.5;
}

/* Footer Bar */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  margin: 0 12rpx;
}

.btn::after { border: none; }

.btn-secondary {
  background: #f5f5f5;
  color: #666;
}

.btn-primary {
  background: #1677ff;
  color: #fff;
}
