/* 图片测试页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 操作按钮 */
.actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  border: none;
}

.action-btn.primary {
  background: #007aff;
  color: white;
}

.action-btn.danger {
  background: #ff3b30;
  color: white;
}

.action-btn:not(.primary):not(.danger) {
  background: white;
  color: #333;
  border: 2rpx solid #ddd;
}

/* 环境信息 */
.env-info {
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 150rpx;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.value.small {
  font-size: 24rpx;
  color: #007aff;
  text-decoration: underline;
}

.value.error {
  color: #ff3b30;
}

/* 测试结果 */
.test-results {
  margin-bottom: 30rpx;
}

.result-item {
  background: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.result-header {
  background: #f8f8f8;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.result-time {
  font-size: 24rpx;
  color: #666;
}

.result-content {
  padding: 20rpx;
}

.info-group {
  margin-bottom: 25rpx;
}

.group-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #eee;
}

/* 状态样式 */
.status-success {
  color: #34c759 !important;
}

.status-failed {
  color: #ff3b30 !important;
}

.status-testing {
  color: #ff9500 !important;
}

.status-pending {
  color: #666 !important;
}

/* 图片测试 */
.image-test {
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  background: #fafafa;
}

.test-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  background: white;
}

.image-status {
  display: flex;
  margin-bottom: 10rpx;
}

.image-error {
  background: #ffebee;
  padding: 10rpx;
  border-radius: 5rpx;
  border-left: 4rpx solid #ff3b30;
}

/* 操作按钮 */
.result-actions {
  margin-top: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #eee;
}

.mini-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  background: #007aff;
  color: white;
  border-radius: 5rpx;
  border: none;
}

/* 调试日志 */
.debug-section {
  background: white;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.debug-log {
  height: 400rpx;
  padding: 20rpx;
}

.log-item {
  display: flex;
  margin-bottom: 10rpx;
  padding: 8rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
}

.log-time {
  width: 120rpx;
  flex-shrink: 0;
  color: #666;
  margin-right: 15rpx;
}

.log-message {
  flex: 1;
  word-break: break-all;
}

.log-info {
  background: #f0f9ff;
  border-left: 4rpx solid #007aff;
}

.log-success {
  background: #f0fff4;
  border-left: 4rpx solid #34c759;
}

.log-error {
  background: #fff5f5;
  border-left: 4rpx solid #ff3b30;
}

.log-info .log-message {
  color: #007aff;
}

.log-success .log-message {
  color: #34c759;
}

.log-error .log-message {
  color: #ff3b30;
}

.partners-section {
  margin-top: 30rpx;
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.partners-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.partner-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.partner-name {
  font-size: 28rpx;
  color: #333;
}

.partner-preview {
  width: 100%;
  height: 160rpx;
  background: #fff;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}

.fid {
  font-size: 22rpx;
  color: #666;
  word-break: break-all;
}

@media screen and (min-width: 768px) {
  .partners-grid { grid-template-columns: repeat(4, 1fr); }
}
.ocr-section {
  margin-top: 24rpx;
  background: white;
  border-radius: 10rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.ocr-text {
  display: block;
  font-size: 26rpx;
  color: #333;
  white-space: pre-wrap;
}
