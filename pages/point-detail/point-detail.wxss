/* pages/point-detail/point-detail.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
}

.loading-state, .empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 26rpx;
}

.record-scroll {
  flex: 1;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
}

.record-list {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
  padding: 0 8rpx;
}

.record-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-card:last-child {
  border-bottom: none;
}

.record-main {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-right: 20rpx;
}

.record-reason {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-amount {
  font-size: 32rpx;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.record-amount.plus {
  color: #faad14;
}

.record-amount.minus {
  color: #333;
}

.list-footer {
  text-align: center;
  padding: 20rpx 0;
  font-size: 22rpx;
  color: #ccc;
  background: #f7f8fa; /* Match container bg */
}
