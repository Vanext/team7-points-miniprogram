/* pages/athlete-profile/athlete-profile.wxss */
.container {
  background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  padding: 40rpx;
}

.loading-skeleton {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.skeleton-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.skeleton-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  margin-right: 24rpx;
}

.skeleton-info {
  flex: 1;
}

.skeleton-line {
  height: 24rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
  margin-bottom: 12rpx;
}

.skeleton-line.short {
  width: 60%;
}

.skeleton-stats {
  display: flex;
  justify-content: space-between;
}

.skeleton-stat {
  flex: 1;
  margin: 0 10rpx;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.error-text {
  font-size: 32rpx;
  color: #64748b;
  margin-bottom: 24rpx;
}

.retry-btn {
  padding: 16rpx 32rpx;
  background: #667eea;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

/* 用户信息头部 */
.profile-header {
  margin: 40rpx 20rpx;
}

.header-bg {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.header-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.1)"/></svg>');
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  margin-right: 24rpx;
  position: relative;
  z-index: 1;
}

.user-info {
  flex: 1;
  position: relative;
  z-index: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.follow-btn {
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
}

.follow-btn.following {
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
}

.follow-btn:active {
  transform: scale(0.95);
}

/* 统计数据 */
.stats-section {
  margin: 0 20rpx 40rpx;
}

.stats-grid {
  display: flex;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  border-right: 1rpx solid #f1f5f9;
}

.stat-item:last-child {
  border-right: none;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

/* 参赛历史 */
.history-section {
  margin: 0 20rpx 40rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  letter-spacing: 1rpx;
}

.yearly-history {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.year-divider {
  background: linear-gradient(135deg, #f8fafc, #e2e8f0);
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.year-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #475569;
  letter-spacing: 2rpx;
}

.event-card {
  padding: 30rpx;
  border-bottom: 1rpx solid #f1f5f9;
  transition: background-color 0.2s ease;
}

.event-card:last-child {
  border-bottom: none;
}

.event-card:active {
  background-color: #f8fafc;
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.event-info {
  flex: 1;
}

.event-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12rpx;
  display: block;
}

.event-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.event-date {
  font-size: 24rpx;
  color: #64748b;
}

.event-type {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.event-type.triathlon {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.event-type.swimming {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  color: white;
}

.event-type.running {
  background: linear-gradient(135deg, #fa709a, #fee140);
  color: white;
}

.event-type.cycling {
  background: linear-gradient(135deg, #a8edea, #fed6e3);
  color: #1e293b;
}

.event-type.other {
  background: linear-gradient(135deg, #d299c2, #fef9d7);
  color: #1e293b;
}

.event-result {
  text-align: right;
}

.result-time {
  font-size: 32rpx;
  font-weight: 700;
  color: #667eea;
  font-family: 'Courier New', monospace;
}

.event-details {
  margin: 20rpx 0;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
}

.segment {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.segment:last-child {
  margin-bottom: 0;
}

.segment-icon {
  width: 40rpx;
  text-align: center;
  margin-right: 16rpx;
}

.icon {
  font-size: 24rpx;
}

.segment-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.segment-name {
  font-size: 26rpx;
  color: #475569;
}

.segment-time {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  font-family: 'Courier New', monospace;
}

.points-info {
  text-align: right;
  margin-top: 16rpx;
}

.points-earned {
  font-size: 24rpx;
  color: #059669;
  font-weight: 600;
  background: #ecfdf5;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 空状态 */
.empty-history {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #94a3b8;
  line-height: 1.5;
}

/* 响应式适配 */
@media screen and (max-width: 480px) {
  .stats-grid {
    margin: 0 16rpx;
  }
  
  .stat-item {
    padding: 32rpx 16rpx;
  }
  
  .stat-number {
    font-size: 40rpx;
  }
  
  .event-card {
    padding: 24rpx;
  }
  
  .event-name {
    font-size: 28rpx;
  }
  
  .result-time {
    font-size: 28rpx;
  }
}