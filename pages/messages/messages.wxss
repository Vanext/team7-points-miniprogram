/* 消息中心页面样式 */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-actions {
  display: flex;
  align-items: center;
}

.mark-all-read {
  font-size: 28rpx;
  color: #007aff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background-color: #f0f8ff;
}

/* 标签页 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  position: relative;
}

.tab-item.active {
  color: #007aff;
  border-bottom: 4rpx solid #007aff;
}

.tab-text {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.badge {
  background-color: #ff3b30;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  line-height: 1;
}

/* 消息列表 */
.message-list {
  padding: 20rpx 0;
}

.message-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.message-item.unread {
  background-color: #f8f9ff;
  border-left: 6rpx solid #007aff;
}

.message-item.unread::before {
  content: '';
  position: absolute;
  left: -6rpx;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background-color: #007aff;
  border-radius: 0 3rpx 3rpx 0;
}

/* 消息图标 */
.message-icon {
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
}

.icon-wrapper.audit_result {
  background-color: #34c759;
}

.icon-wrapper.exchange_status {
  background-color: #ff9500;
}

.icon-wrapper.system {
  background-color: #007aff;
}

.unread-dot {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: #ff3b30;
  border-radius: 50%;
  border: 3rpx solid #fff;
}

/* 消息内容 */
.message-content {
  flex: 1;
  min-width: 0;
}

.message-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.message-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 12rpx;
  word-break: break-all;
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.message-actions {
  margin-left: 20rpx;
  flex-shrink: 0;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff3b30;
  padding: 8rpx 16rpx;
  border: 1rpx solid #ff3b30;
  border-radius: 20rpx;
  background-color: transparent;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.no-more-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .message-item {
    margin-left: 20rpx;
    margin-right: 20rpx;
    padding: 24rpx;
  }
  
  .icon-wrapper {
    width: 60rpx;
    height: 60rpx;
    font-size: 24rpx;
  }
  
  .message-title {
    font-size: 30rpx;
  }
  
  .message-text {
    font-size: 26rpx;
  }
}