/* pages/messages/messages.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
}

/* Header Bar */
.header-bar {
  background: #fff;
  padding: 0 16rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  z-index: 10;
  flex-shrink: 0;
}

.tabs {
  display: flex;
  align-items: center;
  height: 100%;
}

.tab {
  position: relative;
  padding: 0 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.tab.active {
  color: #1677ff;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
  height: 4rpx;
  background: #1677ff;
  border-radius: 2rpx;
}

.badge {
  background: #ff4d4f;
  color: #fff;
  font-size: 18rpx;
  padding: 0 8rpx;
  border-radius: 16rpx;
  line-height: 28rpx;
  height: 28rpx;
  margin-left: 6rpx;
  font-weight: normal;
}

.mark-read-btn {
  font-size: 22rpx;
  color: #1677ff;
  background: #e6f7ff;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
}

.icon-check { margin-right: 4rpx; font-size: 20rpx; }

/* Scroll Area */
.message-scroll {
  flex: 1;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
}

.message-list {
  padding-bottom: 40rpx;
}

/* Message Card */
.msg-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
  transition: all 0.2s;
}

.msg-card.unread {
  background: #fff;
  border-left: 6rpx solid #1677ff;
  padding-left: 18rpx; /* Compensate for border */
}

.msg-main {
  flex: 1;
  overflow: hidden;
  margin-right: 16rpx;
}

.msg-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6rpx;
}

.msg-title-wrap {
  display: flex;
  align-items: center;
  overflow: hidden;
}

.msg-type-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.msg-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.msg-time {
  font-size: 20rpx;
  color: #999;
  flex-shrink: 0;
  margin-left: 12rpx;
}

.msg-content {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.msg-action {
  padding: 10rpx;
  margin-right: -10rpx;
}

.delete-icon {
  color: #ccc;
  font-size: 32rpx;
  line-height: 1;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

.list-footer {
  text-align: center;
  padding: 20rpx 0;
  font-size: 22rpx;
  color: #ccc;
}
