/* pages/profile/profile.wxss */
.container {
  padding-bottom: 40rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* User Header */
.user-header {
  background: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  background-color: #eee;
  border: 2rpx solid #fff;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.info-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.login-btn {
  font-size: 28rpx;
  background: var(--primary-color, #1a237e);
  color: #fff;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  display: inline-block;
  width: auto;
  margin: 0;
}

/* Stats Grid */
.stats-grid {
  display: flex;
  background: #fff;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33%;
}

.stat-num {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color, #1a237e);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* Menu List */
.menu-list {
  background: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #ccc;
  font-size: 30rpx;
}

/* Footer */
.footer {
  text-align: center;
  padding: 40rpx 0;
}

.version {
  font-size: 24rpx;
  color: #ccc;
}
