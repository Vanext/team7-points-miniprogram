.page-title{font-size:34rpx;font-weight:700;padding:20rpx 24rpx}
.tabs{display:flex;background:#fff;margin:12rpx;border-radius:14rpx;overflow:hidden}
.tab{flex:1;text-align:center;padding:16rpx 0;color:#666}
.tab.active{background:#1677ff;color:#fff}
.card{background:#fff;border-radius:16rpx;box-shadow:0 4rpx 12rpx rgba(0,0,0,.06);margin:20rpx;padding:20rpx}
.item{padding:16rpx 0;border-bottom:1rpx solid #eee}
.item:last-child{border-bottom:none}
.row{display:flex;justify-content:space-between;align-items:center;margin:6rpx 0}
.row.meta{color:#666;font-size:24rpx}
.name{font-size:30rpx;font-weight:600}
.badge{padding:6rpx 12rpx;border-radius:10rpx;font-size:22rpx;color:#fff}
.badge.pending{background:#faad14}
.badge.shipped{background:#1677ff}
.badge.completed{background:#52c41a}
.badge.cancelled{background:#ff4d4f}
/* 统一按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  margin: 0 8rpx 0 0;
  background-color: #ffffff;
  color: #333333;
  text-align: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn:active {
  background-color: #f5f5f5;
  transform: scale(0.98);
}

.btn-primary {
  background-color: #1677ff;
  color: #ffffff;
  border-color: #1677ff;
}

.btn-primary:active {
  background-color: #0958d9;
  border-color: #0958d9;
}

.btn-success {
  background-color: #52c41a;
  color: #ffffff;
  border-color: #52c41a;
}

.btn-success:active {
  background-color: #389e0d;
  border-color: #389e0d;
}

.actions{display:flex;gap:12rpx;margin-top:10rpx}
.empty{color:#999;text-align:center;padding:20rpx 0}
