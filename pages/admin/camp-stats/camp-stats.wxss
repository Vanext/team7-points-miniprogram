.container { padding: 24rpx; }
.page-header { display:flex; align-items:center; gap:16rpx; margin-bottom:24rpx; }
.page-title { font-size: 34rpx; font-weight: 600; }
.summary-inline { margin-left:auto; font-size: 26rpx; color:#666; }
.export-btn { background:#1a237e; color:#fff; padding: 12rpx 20rpx; border-radius:8rpx; font-size: 26rpx; }
.grid-container { display:grid; grid-template-columns: repeat(2, 1fr); gap: 12rpx; }
.grid-item { display:flex; align-items:center; gap: 8rpx; padding: 10rpx; background:#fff; border-radius:10rpx; box-shadow:0 3rpx 8rpx rgba(0,0,0,0.05); min-height: 80rpx; }
.grid-avatar { width: 44rpx; height:44rpx; border-radius:50%; background:#eee; }
.grid-name { font-size: 24rpx; font-weight: 500; }
.grid-meta { font-size: 20rpx; color:#666; }
.grid-meta { font-size: 22rpx; color:#666; }
.no-access-card { padding: 120rpx 40rpx; text-align:center; }
.no-access-icon { font-size: 64rpx; }
.no-access-title { font-size: 34rpx; font-weight:600; margin-top: 12rpx; }
.no-access-desc { font-size: 26rpx; color:#666; margin-top: 8rpx; }
.empty { padding: 40rpx; text-align:center; color:#666; }
