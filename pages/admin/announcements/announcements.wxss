/* pages/admin/announcements/announcements.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 40rpx;
}

/* Header & Tabs */
.tabs-header {
  background: #fff;
  padding: 0 16rpx;
  display: flex;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  height: 90rpx;
  align-items: center;
}

.tab-item {
  flex: 1;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1677ff;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 4rpx;
  background: #1677ff;
  border-radius: 2rpx;
}

.header-action {
  position: relative;
  margin-left: auto;
  margin-right: 8rpx;
  flex-shrink: 0;
  background: #e6f7ff;
  color: #1677ff;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.header-action .icon {
  margin-right: 4rpx;
  font-size: 32rpx;
  line-height: 1;
  margin-top: -4rpx;
}

/* List Content */
.content-scroll {
  height: calc(100vh - 90rpx);
}

.list-container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.card-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.status-badge {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.status-badge.active { background: #f6ffed; color: #52c41a; }
.status-badge.inactive { background: #f5f5f5; color: #999; }

.card-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
}

.meta-tag {
  background: #f0f0f0;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

/* Actions */
.card-actions {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  padding-left: 20rpx;
  border-left: 1rpx solid #f0f0f0;
  min-width: 140rpx;
}

.switch-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.switch-label {
  font-size: 20rpx;
  color: #999;
}

.btn-group {
  display: flex;
  gap: 16rpx;
  margin-top: auto;
}

.btn-group.single {
  flex-direction: column;
  align-items: flex-end;
}

.icon-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 32rpx;
  background: #f5f5f5;
  color: #666;
}

.icon-btn.edit { color: #1677ff; background: #e6f7ff; }
.icon-btn.delete { color: #ff4d4f; background: #fff1f0; }

.empty-tip {
  text-align: center;
  color: #999;
  padding: 60rpx;
  font-size: 26rpx;
}

/* Modal Styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal {
  width: 640rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  max-height: 85vh;
}

.modal-header {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title { font-size: 30rpx; font-weight: 600; }
.modal-close { font-size: 40rpx; color: #999; padding: 0 10rpx; }

.modal-body {
  flex: 1;
  overflow-y: auto;
}

.form-group {
  padding: 32rpx;
}

.form-item { margin-bottom: 24rpx; }
.form-item.flex-row { display: flex; justify-content: space-between; align-items: center; }

.label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input, .textarea, .picker {
  width: 100%;
  background: #f5f7fa;
  border-radius: 12rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.input, .picker {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
}

.textarea {
  height: 200rpx;
  padding: 16rpx 24rpx;
}

.picker { color: #333; }

.modal-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.btn.secondary { background: #f5f5f5; color: #666; }
.btn.primary { background: #1677ff; color: #fff; }
