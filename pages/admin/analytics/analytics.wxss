.container { padding: 16rpx; background: #f5f5f5; min-height: 100vh; }
.card { background: #fff; border-radius: 16rpx; box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08); padding: 20rpx; margin-bottom: 12rpx; }
.summary-line { display: flex; justify-content: space-between; margin-bottom: 12rpx; }
.time-switch { display: flex; gap: 8rpx; margin-bottom: 10rpx; }
.switch-btn { display: flex; align-items: center; justify-content: center; height: 56rpx; line-height: 56rpx; padding: 0 20rpx; border-radius: 12rpx; border: 1rpx solid #ddd; background: #f8f8f8; }
.switch-btn::after { border: none; }
.switch-btn.active { background: #1a237e; color: #fff; border: none; }
.label { color: #666; font-size: 26rpx; }
.value { color: #222; font-size: 30rpx; font-weight: 600; }
.bar { margin-bottom: 10rpx; }
.bar-label { font-size: 24rpx; color: #555; margin-bottom: 6rpx; }
.bar-track { position: relative; height: 24rpx; background: #eee; border-radius: 12rpx; overflow: hidden; }
.bar-fill { height: 100%; background: linear-gradient(90deg, #4e54c8, #8f94fb); }
.bar-value { position: absolute; right: 8rpx; top: -4rpx; font-size: 22rpx; color: #333; }
.metrics { display: grid; grid-template-columns: repeat(3, 1fr); gap: 8rpx; }
.metric { text-align: center; }
.metric-label { color: #666; font-size: 24rpx; }
.metric-value { color: #222; font-size: 30rpx; font-weight: 600; }
.summary-text { color: #555; font-size: 24rpx; line-height: 1.6; }