<view class="container">
  <view class="card">
    <view class="time-switch">
      <button class="switch-btn {{timeRange==='7d'?'active':''}}" bindtap="switch7d">7天</button>
      <button class="switch-btn {{timeRange==='30d'?'active':''}}" bindtap="switch30d">30天</button>
      <button class="switch-btn {{timeRange==='all'?'active':''}}" bindtap="switchAll">总累计</button>
    </view>
    <view class="summary-line">
      <text class="label">总访问次数</text>
      <text class="value">{{totals.total}}</text>
    </view>
    <view class="bar" wx:for="{{bars}}" wx:key="name">
      <view class="bar-label">{{item.name}}</view>
      <view class="bar-track">
        <view class="bar-fill" style="width:{{item.percent}}%"></view>
        <text class="bar-value">{{item.count}}</text>
      </view>
    </view>
  </view>

  <view class="card">
    <view class="metrics">
      <view class="metric"><text class="metric-label">累计上传</text><text class="metric-value">{{business.submissions}}</text></view>
      <view class="metric"><text class="metric-label">累计审核</text><text class="metric-value">{{business.audits}}</text></view>
      <view class="metric"><text class="metric-label">上架商品</text><text class="metric-value">{{business.products}}</text></view>
    </view>
  </view>

  <view class="card">
    <text class="summary-text">{{summary}}</text>
  </view>
</view>