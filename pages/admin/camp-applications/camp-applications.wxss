/* pages/admin/camp-applications/camp-applications.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 40rpx;
}

/* Header & Tabs */
.page-header {
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  padding-bottom: 2rpx;
}

.header-title {
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.count-badge {
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
  font-weight: normal;
}

.tabs {
  display: flex;
  padding: 0 16rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1677ff;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background: #1677ff;
  border-radius: 2rpx;
}

/* Content List */
.content-scroll {
  height: calc(100vh - 180rpx); /* Approx header height */
}

.list-container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.app-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.card-main {
  flex: 1;
  margin-right: 24rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.status-tag {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
}

.status-tag.pending { background: #e6f7ff; color: #1677ff; }
.status-tag.approved { background: #f6ffed; color: #52c41a; }
.status-tag.rejected { background: #fff1f0; color: #ff4d4f; }

.time-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

/* Actions */
.card-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  min-width: 80rpx;
  text-align: center;
}

.action-btn.approve { background: #1677ff; color: #fff; }
.action-btn.reject { background: #fff1f0; color: #ff4d4f; }
.action-btn.revoke { background: #fffbe6; color: #faad14; }
.action-btn.disabled { background: #f5f5f5; color: #ccc; }

.empty-tip {
  text-align: center;
  color: #999;
  padding: 60rpx;
  font-size: 26rpx;
}

/* No Access */
.no-access-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.no-access-icon { font-size: 80rpx; margin-bottom: 20rpx; }
.no-access-title { font-size: 36rpx; font-weight: 600; margin-bottom: 10rpx; }
.no-access-desc { color: #999; font-size: 28rpx; }
