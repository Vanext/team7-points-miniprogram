/* pages/admin/members/members.wxss */
page {
  background-color: #f5f7fa;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}

/* 头部区域：吸顶 */
.header-section {
  background-color: #fff;
  padding: 16rpx 24rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.page-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.stats-info {
  font-size: 22rpx;
  color: #666;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.search-input-wrap {
  flex: 1;
  background-color: #f5f7fa;
  border-radius: 28rpx;
  padding: 8rpx 20rpx;
  display: flex;
  align-items: center;
  height: 64rpx;
  box-sizing: border-box;
}

.search-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.search-btn {
  font-size: 24rpx;
  padding: 0 24rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  background-color: #1677ff;
  color: #fff;
  font-weight: 500;
}

.search-btn:active {
  opacity: 0.9;
}

/* 筛选与导出 */
.filter-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sort-group {
  display: flex;
  background-color: #f0f2f5;
  border-radius: 8rpx;
  padding: 4rpx;
}

.sort-item {
  padding: 6rpx 20rpx;
  font-size: 22rpx;
  color: #666;
  border-radius: 6rpx;
  transition: all 0.2s;
}

.sort-item.active {
  background-color: #fff;
  color: #1677ff;
  font-weight: 600;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.export-btn {
  font-size: 22rpx;
  color: #1677ff;
  padding: 6rpx 16rpx;
  border: 1rpx solid #1677ff;
  border-radius: 8rpx;
  background-color: #fff;
}
.export-btn:active {
  background-color: #f0f9ff;
}

/* 成员列表滚动区 */
.members-scroll {
  flex: 1;
  height: 0; /* 关键：确保 flex: 1 生效且内部可滚动 */
  overflow-y: hidden;
}

.members-list {
  padding: 16rpx 20rpx;
  padding-bottom: 40rpx;
}

/* 成员卡片 (新版布局) */
.member-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  display: flex;
  flex-direction: column;
}

/* 卡片主体：左右结构 */
.card-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.info-column {
  flex: 1;
  margin-right: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.name-row {
  display: flex;
  align-items: center;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 300rpx;
}

.lock-indicator {
  font-size: 24rpx;
  line-height: 1;
}

/* 标签行 */
.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  line-height: 1.4;
}

.tag.admin {
  color: #722ed1;
  background: #f9f0ff;
  border: 1rpx solid #d3adf7;
}

.tag.official {
  color: #1677ff;
  background: #e6f7ff;
  border: 1rpx solid #91caff;
}

.tag.paid {
  color: #52c41a;
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.tag.guest {
  color: #999;
  background: #f5f5f5;
  border: 1rpx solid #d9d9d9;
}

.tag.inactive {
  color: #ff4d4f;
  background: #fff1f0;
  border: 1rpx solid #ffa39e;
}

/* 积分展示 */
.points-column {
  text-align: right;
  display: flex;
  align-items: baseline;
  font-family: 'DIN Alternate', sans-serif;
}

.points-val {
  font-size: 36rpx;
  font-weight: 700;
  color: #faad14;
}

.points-val.negative {
  color: #ff4d4f;
}

.points-unit {
  font-size: 22rpx;
  color: #999;
  margin-left: 4rpx;
}

/* 卡片操作区 */
.card-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 12rpx;
  gap: 16rpx;
}

/* 左侧：积分修改 */
.action-group-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.points-input {
  width: 100rpx;
  height: 52rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
  text-align: center;
}

.btn-small {
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 16rpx;
  font-size: 22rpx;
  border-radius: 6rpx;
  transition: opacity 0.2s;
}

.btn-small.primary {
  background: #1677ff;
  color: #fff;
}

.btn-small:active {
  opacity: 0.8;
}

/* 右侧：状态切换按钮组 */
.action-group-right {
  display: flex;
  gap: 12rpx;
}

.btn-text {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid transparent;
  transition: all 0.2s;
}

.btn-text.active {
  background-color: #e6f7ff;
  color: #1677ff;
  border-color: #91caff;
  font-weight: 500;
}

.btn-text.danger {
  background-color: #fff1f0;
  color: #ff4d4f;
  border-color: #ffa39e;
}

.btn-text:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 加载状态 */
.loading-state, .no-more-state {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.empty-state {
  padding: 60rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

/* 权限不足 */
.no-access-card {
  margin: 100rpx 40rpx;
  background: #fff;
  padding: 60rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.no-access-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.no-access-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.no-access-desc {
  font-size: 26rpx;
  color: #666;
}

.member-modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.member-modal {
  width: 640rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.18);
}

.member-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-modal-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
}

.member-modal-close {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 28rpx;
  background: #f5f5f5;
  color: #666;
}

.member-modal-body {
  padding: 20rpx 24rpx 8rpx;
}

.member-modal-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0;
}

.member-modal-label {
  font-size: 24rpx;
  color: #666;
}

.member-modal-value {
  font-size: 24rpx;
  color: #333;
  max-width: 420rpx;
  text-align: right;
  word-break: break-all;
}

.member-modal-section {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed #f0f0f0;
}

.member-modal-section-title {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.member-modal-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f5f7fa;
  border-radius: 10rpx;
  padding: 18rpx 16rpx;
}

.member-modal-picker-text {
  font-size: 26rpx;
  color: #333;
}

.member-modal-picker-arrow {
  font-size: 32rpx;
  color: #999;
}

.member-modal-hint {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #999;
}

.member-modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 20rpx 24rpx 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.member-modal-btn {
  min-width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 12rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 26rpx;
}

.member-modal-btn.primary {
  background: #1677ff;
  color: #fff;
}
