/* pages/admin/members/members.wxss */

/* CSS变量定义 */
:root {
  --primary-color: #1a237e;
  --primary-light: #3f51b5;
  --secondary-color: #f8f9fb;
  --success-color: #4caf50;  --warning-color: #ff9800;
  --warning-color: #ff9800;
  --danger-color: #f44336;
  --text-primary: #2c3e50;
  --text-secondary: #7f8c8d;
  --border-color: #e1e8ed;
  --shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  --border-radius: 16rpx;
}

/* 容器样式 */
.container {
  padding: 24rpx;
  background: linear-gradient(135deg, #f5f6fa 0%, #f8f9fb 100%);
  min-height: 100vh;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  .list-header {
    padding: 20rpx 24rpx;
    flex-direction: column;
    gap: 16rpx;
    align-items: stretch;
  }
  
  .header-info {
    justify-content: center;
  }
  
  .export-btn {
    width: 100%;
    justify-content: center;
  }
  
  .member-card {
    margin: 0 8rpx;
  }
  
  .card-header {
    padding: 20rpx 24rpx;
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
  
  .user-info {
    width: 100%;
  }
  
  .points-display {
    align-items: flex-start;
    text-align: left;
    min-width: auto;
    background: transparent;
    border: none;
    padding: 0;
  }
  
  .card-actions {
    padding: 16rpx 24rpx;
    flex-direction: column;
    gap: 8rpx;
  }
  
  .action-btn {
    min-width: 160rpx;
    height: 64rpx;
    font-size: 24rpx;
  }
  
  .points-control {
    max-width: none;
    width: 100%;
  }
  
  .points-input {
    font-size: 26rpx;
  }
  
  .set-points-btn {
    min-width: 80rpx;
    font-size: 22rpx;
  }
}

@media screen and (max-width: 600rpx) {
  .container {
    padding: 12rpx;
  }
  
  .member-card {
    margin: 0 4rpx;
  }
  
  .user-info {
    gap: 16rpx;
  }
  
  .member-avatar {
    width: 64rpx;
    height: 64rpx;
  }
  
  .avatar-text {
    font-size: 24rpx;
  }
  
  .user-name {
    font-size: 26rpx;
  }
  
  .user-id {
    font-size: 20rpx;
  }
  
  .status-tag, .admin-tag {
    font-size: 18rpx;
    padding: 3rpx 10rpx;
  }
  
  .points-value {
    font-size: 28rpx;
  }
  
  .card-actions {
    padding: 12rpx 20rpx;
    flex-direction: column;
    gap: 12rpx;
  }
  
  .action-btn {
    min-width: 140rpx;
    height: 56rpx;
    font-size: 22rpx;
    gap: 6rpx;
  }
  
  .points-control {
    max-width: none;
    width: 100%;
  }
  
  .points-input {
    font-size: 24rpx;
    min-width: 100rpx;
  }
  
  .set-points-btn {
    min-width: 70rpx;
    font-size: 20rpx;
    padding: 0 16rpx;
  }
  
  .btn-icon {
    font-size: 24rpx;
  }
  
  .btn-text {
    font-size: 22rpx;
  }
}

/* 权限不足页面 */
.no-access-card {
  background: white;
  border-radius: var(--border-radius);
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: var(--shadow);
  margin-top: 100rpx;
}

.no-access-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  display: block;
}

.no-access-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 15rpx;
  display: block;
}

.no-access-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: block;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 32rpx 24rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 12rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.page-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: block;
  line-height: 1.4;
}

/* 搜索区域 */
.search-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.search-container {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  background: #f8f9fb;
  border-radius: var(--border-radius);
  padding: 0 20rpx;
}

.search-icon {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f9fb;
  transition: all 0.2s ease;
}

.search-input:focus {
  border-color: var(--primary-color);
  background: white;
  box-shadow: 0 0 0 4rpx rgba(26, 35, 126, 0.1);
}

.search-btn {
  flex-shrink: 0;
  height: 80rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
}

/* 成员列表容器 */
.members-container {
  background: transparent;
}

/* 列表头部 */
.list-header {
  display: grid;
  grid-template-columns: auto auto 1fr auto;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 32rpx;
  background: white;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow);
  margin-bottom: 24rpx;
}

.header-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.member-count-badge {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  min-width: 48rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(26, 35, 126, 0.3);
}

.members-summary {
  margin-left: 0;
  font-size: 24rpx;
  color: #666;
}

.members-summary-line {
  margin: -20rpx 32rpx 0 32rpx;
}

.members-summary-inline {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.sort-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.sort-btn {
  height: 56rpx;
  padding: 0 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid var(--border-color);
  background: #f8f9fb;
  color: var(--text-primary);
  font-size: 24rpx;
}

.sort-btn.active {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  border: none;
}

@media screen and (max-width: 750rpx) {
  .list-header {
    grid-template-columns: 1fr;
  }
  .export-btn {
    justify-self: end;
  }
}

/* 导出按钮 */
.export-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  height: 64rpx;
  padding: 0 24rpx;
  background: linear-gradient(135deg, var(--success-color), #66bb6a);
  color: #666;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  border: none;
}

.export-btn:disabled {
  background: #e0e0e0;
  color: #666;
  box-shadow: none;
}

.export-btn:active:not(:disabled) {
  background: linear-gradient(135deg, #45a049, #5cb85c);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(76, 175, 80, 0.4);
}

.export-btn .icon {
  font-size: 28rpx;
  color: #666;
}

/* 成员网格布局 */
.members-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 成员卡片 */
.member-card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
}

.member-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(26, 35, 126, 0.02), rgba(63, 81, 181, 0.02));
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.member-card:active {
  transform: translateY(-2rpx) scale(0.98);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.12);
}

.member-card:active::before {
  opacity: 1;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 28rpx;
  background: linear-gradient(135deg, #fafbfc 0%, #f8f9fb 100%);
  border-bottom: 1rpx solid var(--border-color);
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.status-indicators {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  align-items: center;
  justify-content: center;
  min-width: 40rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 2rpx solid white;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.status-dot.active {
  background: var(--success-color);
}

.status-dot.inactive {
  background: var(--warning-color);
}



.user-details {
  flex: 1;
  min-width: 0;
}

.name-line {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 6rpx;
  flex-wrap: wrap;
}

.user-name {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex-shrink: 0;
}

.user-id {
  font-size: 22rpx;
  color: var(--text-secondary);
  display: block;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
  opacity: 0.8;
}

.status-tag, .admin-tag {
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.3rpx;
  flex-shrink: 0;
  height: 28rpx;
  line-height: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  vertical-align: middle;
  box-sizing: border-box;
}

.status-tag.active {
  background: linear-gradient(135deg, #e8f5e8, #c8e6c9);
  color: var(--success-color);
}

.status-tag.inactive {
  background: linear-gradient(135deg, #fff3e0, #ffe0b2);
  color: var(--warning-color);
}

.admin-tag {
  background: linear-gradient(135deg, #e3f2fd, #bbdefb);
  color: var(--primary-color);
}

/* 积分显示区域 */
.points-display {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  text-align: right;
  min-width: 120rpx;
}

.points-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-bottom: 4rpx;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.points-value {
  font-size: 36rpx;
  font-weight: 800;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
  animation: points-glow 3s ease-in-out infinite;
}

@keyframes points-glow {
  0%, 100% {
    /* WXSS 不支持 filter:drop-shadow，使用 box-shadow 替代 */
    box-shadow: none;
  }
  50% {
    box-shadow: 0 0 8rpx rgba(26, 35, 126, 0.3);
  }
}

/* 操作区域 */
.card-actions {
  padding: 20rpx 24rpx;
  background: #fafbfc;
  display: flex;
  align-items: center;
  gap: 16rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  height: 64rpx;
  padding: 0 20rpx;
  border-radius: 12rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: none;
  min-width: 180rpx;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  flex-shrink: 0;
  white-space: nowrap;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.action-btn:active::before {
  left: 100%;
}

.admin-btn.add {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(26, 35, 126, 0.3);
}

.admin-btn.add:active {
  background: linear-gradient(135deg, #1a237e, #303f9f);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(26, 35, 126, 0.4);
}

.admin-btn.remove {
  background: #f5f5f5;
  color: #333;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 确保取消管理员按钮文字可见 */
.admin-btn.remove .btn-text {
  color: #333 !important;
}

.admin-btn.remove:active {
  background: #e0e0e0;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.btn-icon {
  font-size: 28rpx;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.btn-text {
  font-size: 26rpx;
  font-weight: 600;
}

/* 积分控制区域 */
.points-control {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
  max-width: 300rpx;
}

/* 兑换锁定状态显示 */
.lock-status {
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 100rpx;
  height: 40rpx;
  line-height: 1.2;
  box-sizing: border-box;
  margin-top: 8rpx;
}

.lock-status-container {
  display: flex;
  justify-content: flex-end;
  width: 100%;
}

.lock-status.locked {
  background: linear-gradient(135deg, var(--danger-color), #ef5350);
  color: grey;
  box-shadow: 0 2rpx 8rpx rgba(244, 67, 54, 0.3);
}

.lock-status.unlocked {
  background: linear-gradient(135deg, var(--success-color), #66bb6a);
  color: grey;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

/* 负积分样式 */
.points-value.negative-points {
  color: var(--danger-color);
  font-weight: 700;
}

/* 锁定/解锁按钮 */
.lock-btn.lock {
  background: linear-gradient(135deg, var(--danger-color), #ef5350);
  color: grey;
  box-shadow: 0 4rpx 16rpx rgba(244, 67, 54, 0.3);
}

.lock-btn.lock:active {
  background: linear-gradient(135deg, #d32f2f, #e53935);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(244, 67, 54, 0.4);
}

.lock-btn.unlock {
  background: linear-gradient(135deg, var(--success-color), #66bb6a);
  color: green;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
}

.lock-btn.unlock:active {
  background: linear-gradient(135deg, #388e3c, #43a047);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

.points-input {
  flex: 1;
  height: 64rpx;
  padding: 0 16rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 26rpx;
  text-align: center;
  background: white;
  transition: all 0.3s ease;
  font-weight: 600;
  color: var(--text-primary);
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
  min-width: 120rpx;
}

.points-input:focus {
  border-color: var(--primary-color);
  outline: none;
  box-shadow: 0 0 0 3rpx rgba(26, 35, 126, 0.1);
}

.set-points-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  height: 64rpx;
  padding: 0 20rpx;
  background: linear-gradient(135deg, var(--success-color), #66bb6a);
  color: #666;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
  min-width: 80rpx;
  justify-content: center;
  flex-shrink: 0;
}

.set-points-btn:disabled {
  background: #e0e0e0;
  color: #666;
  box-shadow: none;
  cursor: not-allowed;
}

.set-points-btn:active:not(:disabled) {
  background: linear-gradient(135deg, #45a049, #5cb85c);
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(76, 175, 80, 0.4);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  margin: 40rpx 0;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 32rpx;
  opacity: 0.6;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: block;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: block;
  line-height: 1.5;
  opacity: 0.8;
}

/* 加载更多 */
.load-more-section {
  margin-top: 32rpx;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  text-align: center;
}

.load-more-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #f8f9fb, #f5f6fa);
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.load-more-btn:active:not(:disabled) {
  background: linear-gradient(135deg, #e8e9eb, #f0f1f3);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.load-more-btn:disabled {
  background: #f5f5f5;
  color: var(--text-secondary);
  border-color: var(--border-color);
  cursor: not-allowed;
  opacity: 0.6;
}

.load-icon {
  font-size: 32rpx;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 通用按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  border: none;
  cursor: pointer;
  font-size: 26rpx;
  height: 64rpx;
  padding: 0 24rpx;
  min-width: 120rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn:active {
  opacity: 0.9;
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.15);
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
}

.btn-secondary {
  background: #f8f9fb;
  color: var(--text-primary);
  border: 1rpx solid var(--border-color);
}

.btn-success {
  background: linear-gradient(135deg, #4caf50, #66bb6a);
  color: white;
}

.btn-warning {
  background: linear-gradient(135deg, #ff9800, #ffb74d);
  color: white;
}

.btn-danger {
  background: linear-gradient(135deg, #f44336, #ef5350);
  color: white;
}

/* ========================= */
/* 布局稳定性增强（覆盖规则） */
/* ========================= */

/* 避免操作区换行导致卡片高度变化 */
.card-actions {
  flex-wrap: nowrap;
}

/* 固定操作按钮宽度，避免文字长度变化造成抖动 */
.card-actions .action-btn {
  width: 210rpx;
  flex: 0 0 210rpx;
  box-sizing: border-box;
}

/* 统一锁定/解锁按钮在不同状态下的尺寸与边框 */
.lock-btn.lock,
.lock-btn.unlock {
  border: none;
}

/* 取消 active 位移避免点击时卡片内容跳动 */
.member-card:active,
.lock-btn.lock:active,
.lock-btn.unlock:active,
.admin-btn.add:active,
.admin-btn.remove:active {
  transform: none;
}

/* 小屏适配：缩小固定宽度避免挤压换行 */
@media screen and (max-width: 600rpx) {
  .card-actions .action-btn {
    width: 190rpx;
    flex: 0 0 190rpx;
  }
}

/* ========================= */
/* 紧凑现代卡片与按钮栅格样式  */
/* ========================= */

/* 头部使用双列网格：左侧用户信息，右侧指标 */
.card-header {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 16rpx;
  align-items: center;
}

.user-block {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.badge {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  background: var(--secondary-color);
  color: var(--text-secondary);
}
.badge.active { background: #e8f5e9; color: var(--success-color); }
.badge.inactive { background: #fff3e0; color: var(--warning-color); }
.badge.admin { background: #e3f2fd; color: var(--primary-light); }
.badge.member { background: #ede7f6; color: #673ab7; }
.badge.paid { background: #eef2ff; color: #3f51b5; }
.badge.paid.yes { background: #e8f5e9; color: var(--success-color); }
.badge.paid.no { background: #fff3e0; color: var(--warning-color); }

.metrics {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
}
.points-row {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}
.lock-badge {
  font-size: 24rpx;
  color: var(--text-secondary);
}
.lock-badge.locked { color: var(--danger-color); }
.lock-badge.unlocked { color: var(--success-color); }

/* 操作区使用网格布局，自动换行，保证按钮完整显示 */
.actions-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 12rpx;
  grid-auto-rows: minmax(64rpx, auto);
}

.actions-grid .points-control {
  grid-column: span 2;
}

/* 覆盖固定宽度以便栅格自适应布局 */
.actions-grid .action-btn {
  width: auto;
  min-width: 0;
}

/* 更大屏幕增加列数，提升密度 */
@media screen and (min-width: 750rpx) {
  .actions-grid { grid-template-columns: repeat(3, minmax(0, 1fr)); }
}

/* 按钮随当年缴费状态变色 */
.paid-btn {
  background: linear-gradient(135deg, #f8f9fb, #f5f6fa);
  color: #999; 
  border: 1rpx solid var(--border-color);
}
.paid-btn.is-paid {
  background: linear-gradient(135deg, var(--success-color), #66bb6a);
  color: #fff;
  border: none;
}
.paid-btn.not-paid {
  background: #ffffff;
  color: #666;
  border: 2rpx solid #e1e8ed;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}
.paid-btn.not-paid .btn-text { color: #666 !important; }
.paid-btn.not-paid .btn-icon { color: #666 !important; }

/* 栅格中的新积分输入框与设置按钮统一尺寸 */
.grid-input {
  height: 64rpx;
  padding: 0 16rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 26rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.grid-set-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  height: 64rpx;
  padding: 0 20rpx;
  background: linear-gradient(135deg, var(--success-color), #66bb6a);
  color: #666;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
  min-width: 80rpx;
  justify-content: center;
  flex-shrink: 0;
}
