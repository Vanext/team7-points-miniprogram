/* pages/admin/products/products.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 40rpx;
}

/* Header */
.page-header {
  background: #fff;
  padding: 20rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64rpx;
  padding: 0 24rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  line-height: 1;
  border: none;
}

.action-btn.primary {
  background: #1677ff;
  color: #fff;
}

.action-btn.secondary {
  background: #f0f0f0;
  color: #666;
  padding: 0 20rpx; /* Square-ish for refresh */
}

.icon {
  margin-right: 6rpx;
  font-size: 28rpx;
}

.action-btn.secondary .icon { margin-right: 0; }

/* Grid List */
.content-scroll {
  height: calc(100vh - 104rpx);
}

.grid-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* Product Card */
.product-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  align-items: stretch;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.card-thumb {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.card-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.status-badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

.status-badge.active { background: #e6f7ff; color: #1677ff; }
.status-badge.inactive { background: #fff1f0; color: #ff4d4f; }

.card-meta {
  display: flex;
  align-items: center;
  background: #f9f9f9;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  align-self: flex-start;
  margin-top: 12rpx;
}

.meta-item {
  display: flex;
  align-items: baseline;
  gap: 6rpx;
}

.meta-item .label {
  font-size: 20rpx;
  color: #999;
}

.meta-item .value {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

.meta-divider {
  width: 2rpx;
  height: 20rpx;
  background: #ddd;
  margin: 0 16rpx;
}

/* Card Actions */
.card-actions {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 10rpx;
  border-left: 1rpx solid #f0f0f0;
}

.icon-btn {
  width: 60rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  color: #666;
}

.icon-btn.edit { color: #1677ff; background: #e6f7ff; }
.icon-btn.state { color: #faad14; background: #fffbe6; }
.icon-btn.delete { color: #ff4d4f; background: #fff1f0; }

.empty-tip {
  text-align: center;
  color: #999;
  padding: 60rpx;
  font-size: 26rpx;
}

/* Modal Styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal {
  width: 640rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  max-height: 85vh;
}

.modal-header {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title { font-size: 30rpx; font-weight: 600; }
.modal-close { font-size: 40rpx; color: #999; padding: 0 10rpx; }

.modal-body {
  flex: 1;
  overflow-y: auto;
}

.form-group {
  padding: 32rpx;
}

.form-item { margin-bottom: 24rpx; }
.form-row-2 { display: flex; gap: 24rpx; }
.form-row-2 .form-item { flex: 1; }

.label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input, .textarea {
  width: 100%;
  background: #f5f7fa;
  border-radius: 12rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.input {
  height: 80rpx;
  padding: 0 24rpx;
}

.textarea {
  height: 160rpx;
  padding: 16rpx 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.size-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.size-item {
  background: #f5f7fa;
  border-radius: 8rpx;
  padding: 8rpx;
  text-align: center;
}

.size-tag {
  display: block;
  font-size: 20rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.size-input {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  height: 40rpx;
  min-height: 40rpx;
}

.image-uploader {
  width: 160rpx;
  height: 160rpx;
  background: #f5f7fa;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.image-uploader .plus { font-size: 48rpx; line-height: 1; }
.image-uploader .text { font-size: 20rpx; }

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-preview-box {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-img { width: 100%; height: 100%; }

.remove-btn {
  position: absolute;
  top: 0;
  right: 0;
  background: rgba(0,0,0,0.5);
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
  border-bottom-left-radius: 12rpx;
}

.modal-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.btn.secondary { background: #f5f5f5; color: #666; }
.btn.primary { background: #1677ff; color: #fff; }
