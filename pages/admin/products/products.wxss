/* pages/admin/products/products.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.admin-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.card {
  background-color: white;
  border-radius: var(--border-radius);
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow);
}

.form-row {
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f8f9fb;
  border: 2rpx solid var(--border-color);
  border-radius: var(--border-radius);
  font-size: 28rpx;
  color: var(--text-primary);
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.input:focus {
  border-color: var(--primary-color);
  outline: none;
}

/* 图片上传相关样式 */
.image-upload-section {
  width: 100%;
}

.upload-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 15rpx;
  font-weight: 500;
}

.image-upload-container {
  margin-bottom: 15rpx;
}

.image-preview {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: var(--border-radius);
  overflow: hidden;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(255, 0, 0, 0.8);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background-color: #f8f8f8;
  border: 2rpx dashed #ddd;
  border-radius: var(--border-radius);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 60rpx;
  color: #bbb;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.url-input {
  margin-top: 10rpx;
}

/* 统一按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: var(--border-radius);
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s;
  cursor: pointer;
  padding: 20rpx 32rpx;
  margin-right: 16rpx;
  background-color: #f5f5f5;
  color: var(--text-primary);
}

.btn:active {
  opacity: 0.8;
  transform: translateY(1rpx);
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
}

.btn-primary:active {
  background-color: #0056b3;
}

.btn.warn {
  background-color: #ff4757;
  color: white;
}

.btn.warn:active {
  background-color: #e63946;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.list-header .btn {
  font-size: 24rpx; /* 小字体适配mini按钮 */
  padding: 10rpx 20rpx; /* 小内边距，避免文字偏移 */
  margin-right: 0; /* 取消右侧间距，不影响布局 */
  height: 56rpx; /* 固定高度，确保垂直居中 */
  align-items: center; /* 明确flex垂直居中，覆盖原生样式 */
  display: inline-flex; /* 确保flex布局生效（可选，增强兼容性） */
}
.product-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-item:last-child {
  border-bottom: none;
}

.thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--border-radius);
  margin-right: 20rpx;
}

.meta {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.sub {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.actions .btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  margin-right: 0;
  height: 50rpx;
  align-items: center; /* 明确flex垂直居中，覆盖原生样式 */
  display: inline-flex; /* 确保flex布局生效（可选，增强兼容性） */
}

/* 弹层样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal {
  width: 92%;
  max-width: 800rpx;
  background-color: white;
  border-radius: var(--border-radius);
  padding: 40rpx;
}

.modal-scroll {
  height: 72vh;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.modal-actions .btn {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  align-items: center;
  justify-content: center;
}

/* 弹层前3个输入行紧凑布局（名称/积分/库存） */
.modal-scroll .form-row {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}
.modal-scroll .label {
  flex: 0 0 120rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-right: 16rpx;
}
.modal-scroll .input {
  height: 76rpx;
  line-height: 76rpx;
  flex: 1;
  width: auto;
}
.create-btn {
  font-size: 30rpx;
  padding: 24rpx 40rpx;
  min-width: 200rpx;
  height: 72rpx;
}
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}
/* 在对应的WXSS文件中添加 */
.size-stocks {
  display: flex;
  flex-wrap: wrap;
}

.size-item {
  width: 48%;
  margin-right: 2%;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.size-label {
  width: 30%;
  text-align: right;
  padding-right: 10rpx;
}

.size-input {
  width: 65%;
}
