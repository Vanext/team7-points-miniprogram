page {
  background-color: #f7f7f7;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* Header Section */
.header {
  background-color: #fff;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
  z-index: 10;
}

.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.header-btns {
  display: flex;
  gap: 16rpx;
}

.h-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  color: #666;
  background: #fff;
}

.h-btn.primary {
  background: #007aff;
  color: #fff;
  border-color: #007aff;
}

/* Tabs */
.tabs {
  display: flex;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
  position: relative;
}

.tab.active {
  color: #007aff;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #007aff;
  border-radius: 2rpx;
}

/* List Scroll */
.list-scroll {
  flex: 1;
  overflow-y: auto;
}

.list-content {
  padding: 20rpx 24rpx;
}

/* Group Header */
.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  margin-top: 10rpx;
}

.gh-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.gh-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.gh-count {
  font-size: 24rpx;
  color: #999;
}

.gh-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* Card */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.c-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  gap: 20rpx;
}

.c-row:last-child {
  margin-bottom: 0;
}

/* Form Items */
.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
}

.name-col {
  flex: 3;
}

.cat-col {
  flex: 4;
}

.mobile-col {
  flex: 4;
}

.size-combo-col {
  flex: 5;
}

.size-display {
  display: flex;
  align-items: center;
}

.full-width {
  flex: 1;
  width: 100%;
}

/* Labels */
.label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
}

.label-sub {
  display: none;
}

/* Inputs */
.c-input {
  background: #f9f9f9;
  border-radius: 10rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

.cat-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f9f9f9;
  border-radius: 10rpx;
  padding-right: 10rpx;
}

.cat-input {
  background: transparent;
  flex: 1;
}

.cat-picker-btn {
  padding: 10rpx;
  color: #666;
  font-size: 24rpx;
}

/* Toggles */
.toggles {
  display: flex;
  gap: 24rpx;
}

.tg-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tg-label {
  font-size: 24rpx;
  color: #999;
}

.tg-label.active {
  color: #333;
  font-weight: bold;
}

/* Custom Switch Styling for Compactness */
.tg-switch {
  width: 56rpx;
  height: 32rpx;
  background: #eee;
  border-radius: 16rpx;
  position: relative;
  transition: background 0.2s;
}

.tg-switch.on {
  background: #07c160;
}

.tg-switch::after {
  content: '';
  width: 28rpx;
  height: 28rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  transition: left 0.2s;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.tg-switch.on::after {
  left: 26rpx;
}

.actions {
  display: flex;
  gap: 16rpx;
}

.act-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

.act-btn.save {
  background: #e6f7ff;
  color: #007aff;
}

.act-btn.del {
  background: #fff1f0;
  color: #ff4d4f;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 100rpx;
}

.bottom-spacer {
  height: 40rpx;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-box {
  background: #fff;
  width: 600rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-input {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.modal-btns {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.modal-btn.cancel {
  background: #eee;
  color: #666;
}

.modal-btn.confirm {
  background: #007aff;
  color: #fff;
}

/* Compact Layout Additions */
.card {
  padding: 16rpx;
}

.compact-row {
  margin-bottom: 12rpx;
  gap: 12rpx;
  align-items: center;
}

.compact-row:last-child {
  margin-bottom: 0;
}

.label-mini {
  font-size: 22rpx;
  color: #888;
  white-space: nowrap;
  min-width: 50rpx;
}

.compact-input {
  height: 52rpx;
  padding: 0 12rpx;
  font-size: 26rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  flex: 1;
}

.flex-3 { flex: 3; }
.flex-4 { flex: 4; }

.compact-wrapper {
  display: flex;
  align-items: center;
  flex: 1;
  background: #f9f9f9;
  border-radius: 8rpx;
  padding-right: 6rpx;
}
.compact-wrapper .compact-input {
  background: transparent;
  padding-right: 0;
}

.compact-btn {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
}

.compact-toggles {
  display: flex;
  gap: 20rpx;
}

.compact-tg {
  gap: 8rpx;
}
.compact-tg .tg-label {
  font-size: 22rpx;
}

.compact-actions {
  margin-left: auto;
}

.bot-row {
  margin-top: 8rpx;
  padding-top: 12rpx;
  border-top: 1rpx dashed #eee;
}
