.container { padding: 16rpx; background: #f5f5f5; min-height: 100vh; }
.card { background: #fff; border-radius: 16rpx; box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08); padding: 20rpx; }
.section { margin-bottom: 16rpx; }
.label { display: block; font-size: 26rpx; color: #666; margin-bottom: 8rpx; }
.value { font-size: 28rpx; color: #222; }
.user-row { display: flex; align-items: center; gap: 12rpx; }
.avatar { width: 72rpx; height: 72rpx; border-radius: 50%; }
.name { font-size: 28rpx; font-weight: 600; }
.images { display: grid; grid-template-columns: repeat(3, 1fr); gap: 8rpx; }
.image { width: 100%; height: 160rpx; border-radius: 10rpx; background: #eee; }
.reason { font-size: 28rpx; color: #b00020; background: #fdecee; padding: 12rpx; border-radius: 8rpx; }
.actions { display: flex; gap: 12rpx; margin-top: 16rpx; }
.btn { flex: 1; height: 72rpx; background: #1a237e; color: #fff; border: none; border-radius: 10rpx; }
.btn.danger { background: #ef5350; }