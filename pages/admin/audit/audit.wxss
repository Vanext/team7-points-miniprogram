/* pages/admin/audit/audit.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.no-access {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
  font-size: 32rpx;
  color: #666;
}

/* 标签页样式 - 优化 */
.tabs-container {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #f8f8f8;
  padding: 10rpx 0;
}

.tabs {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab-text {
  display: block;
  transition: all 0.3s;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 6rpx;
  background-color: #07c160;
  border-radius: 6rpx 6rpx 0 0;
}

/* 记录列表样式 - 优化 */
.records-list {
  padding-bottom: 30rpx;
}

.record-card {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
  border-left: 6rpx solid transparent;
}

.record-card.auto-approved {
  border-left: 6rpx solid #ff9800;
}

.record-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #f0f0f0;
}

.record-info {
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
  color: #333;
}

.submit-time {
  font-size: 24rpx;
  color: #999;
}

.points-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.points {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 6rpx;
}

.auto-tag {
  font-size: 22rpx;
  color: #ff9800;
  background-color: rgba(255, 152, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.record-body {
  display: flex;
  margin-bottom: 24rpx;
}

.record-content {
  flex: 1;
  margin-right: 20rpx;
}

.category-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.category {
  font-size: 26rpx;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.description {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.reject-hint {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-top: 8rpx;
}
.hint-label {
  font-size: 22rpx;
  color: #999;
}
.hint-text {
  font-size: 24rpx;
  color: #b00020;
  background: #fdecee;
  padding: 6rpx 10rpx;
  border-radius: 8rpx;
}

.image-preview {
  width: 180rpx;
  height: 180rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-count-badge {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 22rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.record-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 2rpx solid #f5f5f5;
}

.action-btn {
  margin-left: 20rpx;
  font-size: 28rpx;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  line-height: 1.5;
  background-color: #f5f5f5;
  color: #666;
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.approve {
  background-color: #07c160;
  color: #fff;
}

.action-btn.reject {
  background-color: #ff6b6b;
  color: #fff;
}

.action-btn.cancel {
  background-color: #ff9800;
  color: #fff;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 30rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 优化分页显示 */
.pagination {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.page-button {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
  transition: all 0.3s;
}

.page-button:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.page-button.disabled {
  background-color: #ccc;
  color: #fff;
}

.page-info {
  color: #999;
  font-size: 28rpx;
  padding: 16rpx 0;
}