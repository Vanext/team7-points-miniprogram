/* pages/admin/audit/audit.wxss */
page {
  background-color: #f5f7fa;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}

.no-access {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #999;
  font-size: 28rpx;
}

/* 标签页 */
.tabs-container {
  background-color: #fff;
  padding: 16rpx 24rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.tabs {
  display: flex;
  background-color: #f0f2f5;
  border-radius: 12rpx;
  padding: 6rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  font-size: 26rpx;
  color: #666;
  border-radius: 10rpx;
  transition: all 0.2s;
  position: relative;
}

.tab.active {
  background-color: #fff;
  color: #07c160;
  font-weight: 600;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

/* 列表滚动区 */
.records-scroll {
  flex: 1;
  overflow-y: hidden; /* 由scroll-view接管 */
}

.records-list {
  padding: 20rpx 24rpx;
  padding-bottom: 40rpx; /* 底部留白 */
}

/* 卡片样式 - 紧凑设计 */
.record-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06); /* 增强阴影 */
  display: flex;
  flex-direction: column;
  position: relative;
}

.record-card.auto-approved {
  border-left: 6rpx solid #ff9800;
  padding-left: 14rpx;
}

/* 主要内容区：分为左侧信息和右侧媒体 */
.card-main {
  display: flex;
  flex-direction: row;
  margin-bottom: 12rpx; /* 减少间距 */
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-width: 0; /* 防止文本溢出撑开 */
  margin-right: 16rpx;
}

/* 头部：头像/名字/日期/积分 */
.info-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx; /* 减少间距 */
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #eee;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.user-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 180rpx;
}

.category-tag {
  font-size: 20rpx;
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

.date {
  font-size: 22rpx;
  color: #999;
}

.points-badge {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-left: 12rpx;
}

/* 描述文本 */
.info-desc {
  flex: 1;
}

.desc-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 最多显示2行 */
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 4rpx;
}

.reject-reason {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #e02020;
  background: #fff0f0;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  line-height: 1.4;
}
.reason-label {
  font-weight: bold;
}

/* 右侧媒体 */
.card-media {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  flex-shrink: 0;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f0f0f0;
}

.media-img {
  width: 100%;
  height: 100%;
}

.img-count {
  position: absolute;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-top-left-radius: 8rpx;
}

/* 底部操作栏 */
.card-actions {
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 12rpx; /* 减少间距 */
  min-height: 48rpx;
}

.status-tag {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
  background: #f8f8f8;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.status-tag.reject {
  color: #ff4d4f;
  background: #fff1f0;
}

.icon-auto, .icon-check, .icon-close {
  margin-right: 6rpx;
  font-weight: bold;
}

.spacer {
  flex: 1;
}

.btn-group {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 0 24rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 100rpx;
  transition: all 0.2s;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.action-btn.approve {
  background: #07c160;
  color: #fff;
}

.action-btn.reject {
  background: #fef0f0;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.action-btn.warn {
  background: #fff7e6;
  color: #fa8c16;
  border: 1rpx solid #fa8c16;
}

/* 空状态与加载状态 */
.empty-state, .loading-state, .no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

.empty-img {
  width: 200rpx;
  margin-bottom: 20rpx;
}
