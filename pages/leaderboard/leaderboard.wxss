/* pages/leaderboard/leaderboard.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f7fa;
}

/* Sticky Header */
.page-header {
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* Tabs */
.tabs {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  font-weight: 500;
}

.tab-item.active {
  color: #1677ff;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 4rpx;
  background: #1677ff;
  border-radius: 2rpx;
}

/* Filter Bar */
.filter-bar {
  padding: 8rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}

.date-picker {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #333;
}

.picker-arrow {
  margin-left: 8rpx;
  font-size: 20rpx;
  color: #999;
}

.filter-tip {
  font-size: 22rpx;
  color: #999;
}

/* Main Content */
.main-content {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

/* Top 3 Area */
.top3-container {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 24rpx 0 16rpx;
  margin-bottom: 16rpx;
}

.top3-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  width: 30%;
}

.top3-item.rank-1 {
  z-index: 2;
  margin: 0 -10rpx;
  padding-bottom: 6rpx;
}

.avatar-wrapper {
  position: relative;
  margin-bottom: 8rpx;
}

.avatar {
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.rank-1 .avatar {
  width: 100rpx;
  height: 100rpx;
  border-color: #ffd700;
}

.rank-2 .avatar {
  width: 80rpx;
  height: 80rpx;
  border-color: #c0c0c0;
}

.rank-3 .avatar {
  width: 80rpx;
  height: 80rpx;
  border-color: #cd7f32;
}

.rank-badge {
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  border-radius: 50%;
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
  border: 2rpx solid #fff;
}

.rank-1 .rank-badge { background: #ffd700; }
.rank-2 .rank-badge { background: #c0c0c0; }
.rank-3 .rank-badge { background: #cd7f32; }

.crown {
  position: absolute;
  top: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  animation: float 2s ease-in-out infinite;
}

@keyframes float {
  0% { transform: translate(-50%, 0); }
  50% { transform: translate(-50%, -6rpx); }
  100% { transform: translate(-50%, 0); }
}

.name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 4rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-1 .name {
  font-weight: 600;
  font-size: 26rpx;
}

.points {
  font-size: 24rpx;
  font-weight: bold;
  color: #1677ff;
  background: rgba(22, 119, 255, 0.1);
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
}

/* List Card */
.list-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.rank-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.rank-num {
  width: 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  font-weight: 600;
  margin-right: 12rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #eee;
}

.user-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.user-points {
  font-size: 28rpx;
  font-weight: bold;
  color: #1677ff;
}

/* Empty State */
.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* Bottom Bar */
.bottom-spacer {
  height: 80rpx; /* Space for fixed bottom bar */
}

.my-rank-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 24rpx; /* Ultra Compact padding */
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.05);
  z-index: 99;
  height: 80rpx; /* Explicit height */
  box-sizing: border-box;
}

.my-rank-bar .rank-left {
  display: flex;
  align-items: center;
}

.my-rank-bar .rank-num {
  width: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #1677ff;
  font-weight: bold;
  margin-right: 12rpx;
}

.my-rank-bar .user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid #1677ff;
}

.my-rank-bar .user-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}

.my-rank-bar .user-points {
  font-size: 28rpx;
  font-weight: bold;
  color: #1677ff;
}
