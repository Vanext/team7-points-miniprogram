/* pages/athlete-records/athlete-records.wxss */
.container {
  background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
  min-height: 100vh;
}

/* 页面头部 */
.header {
  position: relative;
  padding: 0;
  margin-bottom: 20rpx;
}

.header-bg {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  padding: 60rpx 30rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.header-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.1)"/></svg>');
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  z-index: 1;
}

.back-btn, .share-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-btn:active, .share-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.back-icon, .share-icon {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
}

.header-info {
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
}

.header-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

/* 加载和错误状态 */
.loading-container, .error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.error-text {
  font-size: 28rpx;
  color: #ef4444;
  margin-bottom: 30rpx;
}

.retry-btn {
  background: var(--primary-color);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  border: none;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 主要内容 */
.content {
  padding: 0 30rpx 40rpx;
}

/* 统计概览 */
.stats-overview {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-number {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.stats-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e2e8f0;
  margin: 0 40rpx;
}

/* 年份选择器 */
.year-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.year-label {
  font-size: 28rpx;
  color: #1e293b;
  margin-right: 20rpx;
  font-weight: 500;
}

.year-picker {
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 16rpx 24rpx;
  border-radius: 25rpx;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.year-picker:active {
  border-color: var(--primary-color);
}

.year-text {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
  margin-right: 12rpx;
}

.year-arrow {
  font-size: 20rpx;
  color: #94a3b8;
}

/* 年度统计 */
.yearly-stats {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.yearly-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.yearly-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
}

.yearly-summary {
  display: flex;
  gap: 20rpx;
}

.yearly-races, .yearly-points {
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
}

.yearly-races {
  background: rgba(26, 35, 126, 0.1);
  color: var(--primary-color);
}

.yearly-points {
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
}

/* 比赛记录列表 */
.records-list {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.record-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f1f5f9;
  transition: background-color 0.2s ease;
}

.record-item:last-child {
  border-bottom: none;
}

.record-item:active {
  background-color: #f8fafc;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.record-info {
  flex: 1;
  margin-right: 20rpx;
}

.record-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.record-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.record-type {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
}

.record-date {
  font-size: 24rpx;
  color: #64748b;
}

.record-result {
  text-align: right;
}

.record-time {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-color);
  font-family: 'Courier New', monospace;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #64748b;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .header-bg {
    padding: 50rpx 20rpx 30rpx;
  }
  
  .content {
    padding: 0 20rpx 40rpx;
  }
  
  .stats-overview {
    padding: 30rpx;
    margin-bottom: 20rpx;
  }
  
  .stats-number {
    font-size: 40rpx;
  }
  
  .record-item {
    padding: 24rpx 20rpx;
  }
  
  .record-name {
    font-size: 26rpx;
  }
  
  .record-time {
    font-size: 28rpx;
  }
}