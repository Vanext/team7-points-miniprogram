/* pages/camp/leaderboard/leaderboard.wxss */

.camp-leaderboard {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载和错误状态 */
.loading-container,
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  min-height: 60vh;
}

.loading-text,
.error-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.retry-btn {
  background-color: #1a237e;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 无权限状态 */
.access-denied {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.lock-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.denied-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.denied-desc {
  font-size: 28rpx;
  color: #666;
}

/* 主要内容 */
.main-content {
  padding-bottom: 40rpx;
}

/* 训练营信息 */
.camp-info-section {
  padding: 40rpx 40rpx 20rpx;
}

.camp-info-card {
  background: linear-gradient(135deg, #1a237e, #3949ab);
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(26,35,126,0.3);
}

.camp-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.camp-participants {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 当前用户排名 */
.current-user-section {
  padding: 0 40rpx 20rpx;
}

.current-user-card {
  background: linear-gradient(135deg, #fff3cd, #ffeaa7);
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  border: 2rpx solid #ffc107;
}

.user-rank-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rank-badge {
  font-size: 48rpx;
  font-weight: bold;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.rank-badge.gold {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
}

.rank-badge.silver {
  background: linear-gradient(135deg, #C0C0C0, #A9A9A9);
  color: white;
}

.rank-badge.bronze {
  background: linear-gradient(135deg, #CD7F32, #A0522D);
  color: white;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-weeks {
  font-size: 26rpx;
  color: #666;
}

.completion-rate {
  text-align: right;
}

.rate-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1a237e;
  margin-bottom: 4rpx;
}

.rate-label {
  font-size: 24rpx;
  color: #666;
}

/* 排行榜列表 */
.leaderboard-section {
  padding: 0 40rpx;
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
}

.leaderboard-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rank-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.rank-item.current-user {
  background: linear-gradient(135deg, #e3f2fd, #bbdefb);
  border: 2rpx solid #2196f3;
}

.rank-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rank-number {
  font-size: 36rpx;
  font-weight: bold;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.rank-number.gold {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
}

.rank-number.silver {
  background: linear-gradient(135deg, #C0C0C0, #A9A9A9);
  color: white;
}

.rank-number.bronze {
  background: linear-gradient(135deg, #CD7F32, #A0522D);
  color: white;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.user-weeks {
  font-size: 24rpx;
  color: #666;
}

.rank-right {
  text-align: right;
}

.completion-rate-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1a237e;
  margin-bottom: 4rpx;
}

.completion-rate-label {
  font-size: 22rpx;
  color: #666;
}

/* 排行榜说明 */
.leaderboard-info {
  padding: 40rpx;
}

.info-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.info-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 32rpx;
  width: 40rpx;
  text-align: center;
  margin-top: 4rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}

/* Tab切换样式 */
.tab-container {
  display: flex;
  background: #f0f0f0;
  border-radius: 50rpx;
  margin: 0 40rpx 40rpx;
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #1a237e, #3949ab);
  color: #fff;
  font-weight: bold;
}