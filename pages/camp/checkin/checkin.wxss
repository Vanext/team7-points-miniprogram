.checkin-page { padding: 40rpx; }
.header .title { font-size: 32rpx; font-weight: bold; color: #333; }
.section { margin-top: 24rpx; background: #fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06); }
.label { display: block; font-size: 28rpx; color: #666; margin-bottom: 12rpx; }
.images { display: flex; gap: 12rpx; align-items: center; flex-wrap: wrap; }
.image { width: 220rpx; height: 220rpx; border-radius: 12rpx; background: #f5f5f5; }
.upload-btn { background: #f5f5f5; color: #333; border: 1rpx solid #ddd; border-radius: 8rpx; padding: 12rpx 24rpx; font-size: 26rpx; }
.result { display: flex; align-items: center; gap: 16rpx; }
.result-text { font-size: 28rpx; color: #333; }
.input { background: #f8f9fa; border: 1rpx solid #ddd; border-radius: 8rpx; padding: 12rpx; font-size: 28rpx; }
.input-row { margin-top: 16rpx; display: flex; align-items: center; gap: 12rpx; }
.unit-label { font-size: 26rpx; color: #666; }
.hour-input { width: 200rpx; }
.minute-input { width: 200rpx; }
.completion { margin-top: 16rpx; }
.completion-text { font-size: 26rpx; color: #333; }
.progress { margin-top: 12rpx; width: 100%; height: 16rpx; background: #eee; border-radius: 8rpx; overflow: hidden; }
.progress-inner { height: 100%; background: #1a237e; }
.recognized { margin-top: 16rpx; }
.recognized-text { display: block; background: #f8f9fa; border-radius: 8rpx; padding: 12rpx; font-size: 24rpx; color: #666; }
.footer { margin-top: 40rpx; }
.submit-btn { width: 100%; background: #1a237e; color: #fff; border: none; border-radius: 8rpx; padding: 24rpx; font-size: 30rpx; }
