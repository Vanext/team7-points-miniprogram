/* 赛道详情与参赛指导 */
.course-page { padding: 40rpx; background: #f7f7f7; }
.header { display: flex; align-items: center; gap: 16rpx; margin-bottom: 20rpx; }
.event-logo { height: 40rpx; }
.banner-logo { width: 100%; display: block; }
.title { font-size: 32rpx; font-weight: bold; color: #333; }
.section { background: #fff; border-radius: 16rpx; padding: 30rpx; margin-bottom: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06); }
.section-title { font-size: 30rpx; font-weight: bold; color: #1a237e; margin-bottom: 16rpx; }
.course-img { width: 100%; border-radius: 12rpx; margin-bottom: 16rpx; }
.desc { display: block; font-size: 26rpx; color: #555; line-height: 1.6; margin-bottom: 12rpx; }
.tips { display: flex; flex-direction: column; gap: 8rpx; }
.tips text { font-size: 24rpx; color: #666; }