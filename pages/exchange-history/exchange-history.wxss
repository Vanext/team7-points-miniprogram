/* pages/exchange-history/exchange-history.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
}

.history-scroll {
  flex: 1;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
}

/* Order Card */
.order-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f9f9f9;
  font-size: 24rpx;
}

.order-date {
  color: #999;
}

.order-status {
  font-weight: 500;
}
.order-status.pending { color: #faad14; }
.order-status.completed { color: #52c41a; }
.order-status.cancelled { color: #999; }
.order-status.rejected { color: #ff4d4f; }

.order-body {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}

.order-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.order-spec {
  font-size: 24rpx;
  color: #999;
}

.order-cost {
  text-align: right;
  flex-shrink: 0;
}

.cost-val {
  display: block;
  font-size: 32rpx;
  color: #1677ff;
  font-weight: bold;
}

.cost-label {
  font-size: 20rpx;
  color: #999;
}

.order-footer {
  padding: 16rpx 24rpx;
  border-top: 1rpx solid #f9f9f9;
  display: flex;
  justify-content: flex-end;
}

.btn-cancel {
  margin: 0;
  background: #fff;
  border: 1rpx solid #d9d9d9;
  color: #666;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  line-height: 1.5;
}

.btn-hover {
  background: #f5f5f5;
}

/* States */
.loading-state, .empty-state, .list-footer {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}
